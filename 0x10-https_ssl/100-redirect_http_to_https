global
    log /dev/log    local0
    log /dev/log    local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000

frontend http_front
    bind :80
    bind :443 ssl crt /etc/letsencrypt/live/www.amaresotech/amareso.tech.pem
    http-request redirect scheme https unless { ssl_fc }
    stats uri /haproxy?stats

    default_backend http_back

backend http_back
    balance roundrobin
    server hostname hostIP:PORT check
    server ubuntu@396197-web-01 54.236.49.157 check
    server ubuntu@396197-web-02 54.237.224.153 check
